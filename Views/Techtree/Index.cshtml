<!DOCTYPE html>
@using System.Linq
<html>
<head>
    <link rel="stylesheet" href="/css/TechTree.css">
</head>
<body>
@{
var currentTreeId = ViewBag.CurrentTreeId;
var availableTrees = ViewBag.AvailableTrees;
}

<div class="tree-selector">
    @foreach (var treeId in availableTrees)
    {
    <button class="tree-button @(treeId == currentTreeId ? "active" : "")"
            onclick="switchTree(@treeId)">
        Tech Tree @treeId
    </button>
    }
</div>

<div class="grid-container">
    <div class="draggable-grid" id="grid">
        <svg class="connections-layer" style="position: absolute; width: 100%; height: 100%; z-index: 0;">
            @foreach (var node in Model)
            {
                foreach (var prerequisite in node.Prerequisites)
                {
                    var status = node.Status.ToLower();
                    <path class="connection-@status"
                          data-to="@node.Id"
                          d="M @(prerequisite.X + 64),@(prerequisite.Y + 64) Q @((prerequisite.X + node.X) / 2 + 64),@((prerequisite.Y + node.Y) / 2) @(node.X + 64),@(node.Y + 64)"/>
                }
            }
        </svg>

        @foreach (var node in Model)
        {
            <div class="tech-node @node.Status.ToLower()" data-node-id="@node.Id" style="left: @(node.X)px; top: @(node.Y)px;">
                <div class="content">
                    <div class="name">@node.Name</div>
                    <div class="popup">
                        <div class="description">@node.Description</div>
                        @if (node.Status == "Available")
                        {
                            <form method="post" asp-action="CompleteNode" asp-controller="TechTree" onsubmit="return submitComplete(this)">
                                <input type="hidden" name="id" value="@node.Id"/>
                                <button type="submit">Complete</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div id="coordinates">Position: (0, 0)</div>

<script src="/js/TechTree.js"></script>
</body>
</html>